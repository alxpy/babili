{
  "private": true,
  "license": "MIT",
  "author": "amasad",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "gulp build",
    "changelog": "lerna-changelog",
    "ci": "npm run lint && npm run bootstrap && npm run coverage",
    "clean": "lerna clean",
    "coverage-ci": "codecov -f coverage/coverage-final.json",
    "coverage": "jest --coverage",
    "fix": "eslint packages/*/src packages/*/__tests__ scripts/*.js --fix",
    "lint": "eslint packages/*/src packages/*/__tests__ scripts/*.js",
    "publish-internal": "git pull origin master --rebase && npm run build && NPM_DIST_TAG=internal ./node_modules/.bin/lerna publish --skip-git",
    "publish": "git pull origin master --rebase && npm run build && npm test && lerna publish",
    "test": "jest",
    "updated": "lerna updated",
    "watch": "gulp watch"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testEnvironment": "node",
    "roots": [
      "packages"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./coverage/"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.23.0",
    "babel-preset-env": "^1.1.11",
    "babel-traverse": "^6.23.1",
    "bytes": "^2.1.0",
    "chalk": "^1.1.3",
    "cli-table": "^0.3.1",
    "closure-compiler": "^0.2.12",
    "codecov": "^1.0.1",
    "commander": "^2.9.0",
    "eslint": "^3.16.1",
    "eslint-config-babel": "^6.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "google-closure-compiler-js": "^20170124.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-newer": "^1.1.0",
    "gulp-util": "^3.0.8",
    "jest-cli": "^19.0.2",
    "lerna": "2.0.0-beta.38",
    "lerna-changelog": "^0.3.0",
    "through2": "^2.0.1",
    "uglify-js": "^2.8.5"
  }
}
